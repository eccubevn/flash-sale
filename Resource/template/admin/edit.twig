{% extends '@admin/default_frame.twig' %}

{% set menus = ['setting', 'flash_sales_admin'] %}


{% block title %}{{ 'admin.content.news_management'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.content.contents_management'|trans }}{% endblock %}

{% block javascript %}
    <script src="{{ asset('FlashSale/js/rule.js', 'plugin') }}"></script>
    <script>
        $(function() {
            $('#ruleForm').initRulePanel({
                setup: JSON.parse('{{ metadata|json_encode|raw }}')
            });
        });
    </script>
{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block main %}
    <form role="form" class="form-horizontal" name="form1" id="form1" method="post" action="?">
        {{ form_widget(form._token) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8">
                                    <span class="card-title">{{ 'admin.content.news.news_registration'|trans }}</span></div>
                                <div class="col-4 text-right">
                                    <a data-toggle="collapse" href="#newsForm" aria-expanded="true" aria-controls="newsForm"><i class="fa fa-lg fa-angle-up"></i></a></div>
                            </div>
                        </div>
                        <div class="ec-cardCollapse collapse show" id="newsForm" style="">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-3"><span>{{ 'admin.content.news.title'|trans }}</span></div>
                                    <div class="col mb-2">
                                        {{ form_widget(form.name) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-3"><span>From time</span></div>
                                    <div class="col mb-2">
                                        {{ form_widget(form.from_time) }}
                                        {{ form_errors(form.from_time) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-3"><span>To time</span></div>
                                    <div class="col mb-2">
                                        {{ form_widget(form.to_time) }}
                                        {{ form_errors(form.to_time) }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-3">
                                        <div class="d-inline-block" data-tooltip="true" data-placement="top" title="{{ 'tooltip.content.news.body'|trans }}">
                                            <span>{{ 'admin.content.news.body'|trans }}</span><i class="fa fa-question-circle fa-lg ml-1"></i>
                                        </div>
                                    </div>
                                    <div class="col mb-2">
                                        {{ form_widget(form.description) }}
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8">
                                    <span class="card-title">Rule not translate</span></div>
                                <div class="col-4 text-right">
                                    <a data-toggle="collapse" href="#ruleForm" aria-expanded="true" aria-controls="ruleForm"><i class="fa fa-lg fa-angle-up"></i></a></div>
                            </div>
                        </div>
                        <div class="ec-cardCollapse collapse show" id="ruleForm">
                            <div class="card-body">
                                <div class="row justify-content-start mb-2">
                                    <div class="col-auto">
                                        <a class="btn btn-ec-regular mr-2 add" data-bind="addRule">Add Rule</a>
                                    </div>
                                    <div class="col-auto">
                                        {{ form_widget(form.rules) }}
                                        {{ form_errors(form.rules) }}
                                    </div>
                                </div>
                                <table  class="table table-striped table-sm mb-0">
                                    <thead class="table-active">
                                        <tr>
                                            <th width="10%">Rule Type</th>
                                            <th width="10%">Rule Operator</th>
                                            <th width="25%">Rule Promotion</th>
                                            <th width="45%">Rule Condition</th>
                                            <th width="5%"></th>
                                        </tr>
                                    </thead>
                                    <tbody data-container="rule">
                                        <tr class="d-none pb-5" data-template="rule">
                                            <td>
                                                <input type="hidden" name="rule[id]">
                                                <select name="rule[type]"></select>
                                            </td>
                                            <td><select name="rule[operator]"></select></td>
                                            <td class="promotion">
                                                <input type="hidden" name="promotion[id]">
                                                <select name="promotion[type]"></select>
                                                <select name="promotion[attribute]"></select>
                                                <input name="promotion[value]">
                                            </td>
                                            <td class="condition">
                                                <a class="btn btn-ec-regular mr-2 add" data-bind="addCondition">Add Condition</a>
                                                <div data-container="condition">
                                                    <div class="d-none" data-template="condition">
                                                        <input type="hidden" name="condition[id]">
                                                        <select name="condition[type]"></select>
                                                        <select name="condition[operator]"></select>
                                                        <select name="condition[attribute]"></select>
                                                        <input name="condition[value]">
                                                        <a class="btn btn-ec-regular mr-2 add" data-bind="removeCondition">Remove</a>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <a class="btn btn-ec-regular mr-2 add" data-bind="removeRule">Remove</a>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="c-conversionArea">
                    <div class="c-conversionArea__container">
                        <div class="row justify-content-between align-items-center">
                            <div class="col-6">
                                <div class="c-conversionArea__leftBlockItem">
                                    <a class="c-baseLink" href="{{ url('flash_sale_admin_list') }}">
                                        <i class="fa fa-backward" aria-hidden="true"></i>
                                        <span>Back to list</span></a>
                                </div>
                            </div>
                            <div class="col-6">
                                <div id="ex-conversion-action" class="row align-items-center justify-content-end">
                                    <div class="col-auto">
                                        {{ form_widget(form.status) }}
                                        {{ form_errors(form.status) }}
                                    </div>
                                    <div class="col-auto">
                                        <button class="btn btn-ec-conversion px-5" type="submit">{{ 'admin.common.registration'|trans }}</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

{% endblock %}
